<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottomsheet"
    android:orientation="vertical"
    android:padding="32dp">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_logout"
        android:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/tvLogoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Confirmar saÃ­da"
        android:textColor="@color/colorPrimary"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tvLogoutMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/nunito_regular"
        android:text="Tem certeza que deseja sair da sua conta?"
        android:textAlignment="center"
        android:textColor="@color/colorOnSurfaceVariant"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_tab_unselected_big"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Cancelar"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/btnConfirmarSair"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_button_sair"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Sair"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>

