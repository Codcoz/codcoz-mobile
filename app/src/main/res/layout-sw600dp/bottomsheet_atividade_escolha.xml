<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottomsheet"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Título centralizado -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Como deseja registrar?"
        android:textColor="@color/colorPrimary"
        android:textSize="26sp" />

    <!-- Opções de entrada -->
    <LinearLayout
        android:id="@+id/content_entrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:orientation="horizontal">

        <!-- Botão Escanear -->
        <LinearLayout
            android:id="@+id/btnScanner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_summary_card"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_barcode_scan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Escanear produto"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center"
                android:text="Escanear código de barras"
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="18sp" />

        </LinearLayout>

        <!-- Botão Manual -->
        <LinearLayout
            android:id="@+id/btnManual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_summary_card"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_entrada_manual" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Entrada manual"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center"
                android:text="Cadastrar produtos manualmente"
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Botão Fechar -->
    <TextView
        android:id="@+id/btnCancelar"
        android:layout_width="345dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_tab_selected_big"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:text="Fechar"
        android:textColor="@color/colorPrimary"
        android:textSize="32sp" />

</LinearLayout>


