<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnPrimary"
    android:orientation="vertical">

    <include
        android:id="@+id/header_detalhes_receita"
        layout="@layout/header_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Título da Receita -->
            <TextView
                android:id="@+id/tvTituloReceita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Macarrão à Bolonhesa"
                android:textColor="@color/colorPrimary"
                android:textSize="28sp" />

            <!-- Seção de Ingredientes -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_stroke"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- Cabeçalho dos Ingredientes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_bold"
                            android:text="Ingrediente"
                            android:textColor="@color/colorPrimary"
                            android:textSize="22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_bold"
                            android:text="Quantidade"
                            android:textColor="@color/colorPrimary"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <!-- Lista de Ingredientes -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewIngredientes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_ingrediente" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Seção de Modo de Preparo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Modo de preparo"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewInstrucoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="24dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_instrucao" />

            <!-- Seção de Descrição -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_stroke"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Descrição"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tvDescricaoReceita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Descrição"
                        android:textColor="@color/colorOnSurfaceVariant"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvTempoPreparo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Tempo de preparo: 15 minutos"
                        android:textColor="@color/colorOnSurfaceVariant"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvTempoCozimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Tempo de cozimento: 30 minutos"
                        android:textColor="@color/colorOnSurfaceVariant"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvPorcoes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Rende 6 porções"
                        android:textColor="@color/colorOnSurfaceVariant"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
