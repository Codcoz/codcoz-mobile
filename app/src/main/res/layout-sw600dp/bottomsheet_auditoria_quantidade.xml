<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottomsheet"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Auditoria"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorOnSurfaceVariant" />

    <!-- Container com padding para o restante do conteúdo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Informações do produto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:text="Produto: "
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtProduto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- Campo de quantidade -->
        <EditText
            android:id="@+id/inputQuantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:background="@drawable/bg_stroke"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_vertical|start"
            android:hint="Quantidade contada"
            android:inputType="number"
            android:padding="24dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorOnSurfaceVariant"
            android:textSize="22sp" />

        <!-- Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCancelar"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_tab_unselected_big"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:text="Cancelar"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btnConfirmar"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_tab_selected_big"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:text="Confirmar"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
