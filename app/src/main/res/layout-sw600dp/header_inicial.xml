<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_activity_back_container"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="24dp">

    <ImageView
        android:id="@+id/header_icon"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/logo_vazada_codcoz" />

    <!-- Informações do usuário -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:text="Olá, !"
            android:textColor="@color/colorOnPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/header_funcao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:text="Estoquista"
            android:textColor="@color/colorOnPrimary"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/header_perfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_imagem_perfil" />


</LinearLayout>
