<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottomsheet">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="48dp">

        <!-- Header com seta e título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnClosePopup"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="Fechar"
                android:padding="4dp"
                android:src="@drawable/ic_voltar" />

            <TextView
                android:id="@+id/tvNomeProduto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="Carregando..."
                android:textColor="@color/colorPrimary"
                android:textSize="26sp" />
        </LinearLayout>

        <!-- Informações do produto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:text="Código: "
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvCodigoProduto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:text="Fornecedor: "
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvFornecedorProduto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:text="Estoque atual: "
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvEstoqueAtual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- Seletor de quantidade -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMenos"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Diminuir quantidade"
                android:src="@drawable/ic_barra"
                app:tint="@color/colorPrimary" />

            <EditText
                android:id="@+id/etQuantidade"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/bg_stroke"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="5"
                android:padding="12dp"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="32sp" />

            <ImageButton
                android:id="@+id/btnMais"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Aumentar quantidade"
                android:src="@drawable/ic_add" />

        </LinearLayout>

        <!-- Botão Confirmar -->
        <TextView
            android:id="@+id/btnConfirmar"
            android:layout_width="345dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_tab_selected_big"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Confirmar"
            android:textColor="@color/colorPrimary"
            android:textSize="26sp" />

    </LinearLayout>

</FrameLayout>