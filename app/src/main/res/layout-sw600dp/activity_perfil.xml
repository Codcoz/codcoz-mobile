<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnPrimary"
    android:orientation="vertical">

    <include
        android:id="@+id/header_perfil"
        layout="@layout/header_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/iv_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:backgroundTint="@color/custom_blue_link_opacity_44"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_profile" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filipi Inácio"
                        android:textColor="@color/colorPrimary"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_funcao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instituto J&amp;F"
                        android:textColor="@color/colorOnSurfaceVariant"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_desde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estoquista desde 14/01/2024"
                        android:textColor="@color/colorOnSurfaceVariant"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_periodo_row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_calendario_periodo" />

                    <TextView
                        android:id="@+id/lbl_periodo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:padding="6dp"
                        android:text="Período:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="26sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/op7dias"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_tab_selected"
                    android:gravity="center"
                    android:text="7 dias"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/op90dias"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_tab_unselected"
                    android:gravity="center"
                    android:text="90 dias"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/op30dias"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_tab_unselected"
                    android:gravity="center"
                    android:text="30 dias"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Tabs -->
            <LinearLayout
                android:id="@+id/group_tabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tabAtividades"
                    android:layout_width="175dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_tab_selected"
                    android:gravity="center"
                    android:text="Atividades"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tabAuditorias"
                    android:layout_width="175dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_tab_unselected"
                    android:gravity="center"
                    android:text="Auditorias"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewHistoricoPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_historicos_perfil" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
