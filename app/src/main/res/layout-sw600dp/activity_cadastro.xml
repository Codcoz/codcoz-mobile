<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".auth.CadastroActivity">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="200dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toTopOf="@+id/containerCadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_vazada_codcoz" />

    <LinearLayout
        android:id="@+id/containerCadastro"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_branco_login"
        android:orientation="vertical"
        android:padding="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="64dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Cadastrar Senha"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutNovaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:boxStrokeColor="@color/colorOnSurfaceVariant"
            app:hintTextColor="@color/colorOnSurfaceVariant"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorOnSurfaceVariant">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/novaSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nova senha"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutConfirmacaoSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            app:boxStrokeColor="@color/colorOnSurfaceVariant"
            app:hintTextColor="@color/colorOnSurfaceVariant"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorOnSurfaceVariant">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editConfirmacaoSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirme sua senha"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="345dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            android:backgroundTint="@color/colorSecondary"
            android:fontFamily="@font/nunito_semibold"
            android:text="Cadastrar"
            android:textColor="@color/colorPrimary"
            android:textSize="26sp"
            app:cornerRadius="30dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
