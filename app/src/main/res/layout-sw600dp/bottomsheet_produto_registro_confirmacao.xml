<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottomsheet"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Confirmar registro"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorOnSurfaceVariant" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Produto:"
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtNomeProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Estoque antigo:"
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtEstoqueAntigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Estoque atualizado:"
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtEstoqueAtualizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCancelar"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_tab_unselected_big"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:text="Cancelar"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btnConfirmar"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_tab_selected_big"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:text="Confirmar"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

