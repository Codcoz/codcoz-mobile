<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_branco_login">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_erro_popup" />

    <TextView
        android:id="@+id/tvErrorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Ops! Algo deu errado"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/nunito_regular"
        android:text="Tente novamente em alguns instantes"
        android:textAlignment="center"
        android:textColor="@color/colorOnSurfaceVariant"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnErrorOk"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorSecondary"
        android:fontFamily="@font/nunito_semibold"
        android:text="Entendi"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:cornerRadius="24dp" />

</LinearLayout>
