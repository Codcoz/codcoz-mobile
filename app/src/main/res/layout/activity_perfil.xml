<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnPrimary"
    android:orientation="vertical">

    <include
        android:id="@+id/header_perfil"
        layout="@layout/header_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/iv_avatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_avatar_circle_full"
                    android:gravity="center"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/iv_profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_imagem_perfil" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_funcao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorOnSurfaceVariant"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_desde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estoquista desde 00/00/0000"
                        android:textColor="@color/colorOnSurfaceVariant"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_periodo_row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:src="@drawable/ic_calendario_periodo" />

                    <TextView
                        android:id="@+id/lbl_periodo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:padding="6dp"
                        android:text="PerÃ­odo:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/op7dias"
                    android:layout_width="75dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_tab_selected"
                    android:gravity="center"
                    android:text="7 dias"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/op90dias"
                    android:layout_width="75dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_tab_unselected"
                    android:gravity="center"
                    android:text="90 dias"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/op30dias"
                    android:layout_width="75dp"
                    android:layout_height="33dp"
                    android:background="@drawable/bg_tab_unselected"
                    android:gravity="center"
                    android:text="30 dias"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Tabs -->
            <LinearLayout
                android:id="@+id/group_tabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tabAtividades"
                    android:layout_width="112dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_tab_selected"
                    android:gravity="center"
                    android:text="Atividades"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tabAuditorias"
                    android:layout_width="112dp"
                    android:layout_height="33dp"
                    android:background="@drawable/bg_tab_unselected"
                    android:gravity="center"
                    android:text="Auditorias"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewHistoricoPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_historicos_perfil" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
