<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnPrimary"
    tools:context=".actions.PerfilActivity">

    <include
        android:id="@+id/header_perfil"
        layout="@layout/header_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/iv_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="16dp"
            android:background="@drawable/bg_avatar_circle"
            android:backgroundTint="@color/custom_blue_link_opacity_44"
            android:gravity="center"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Filipi Inácio"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_avatar" />

        <TextView
            android:id="@+id/tv_funcao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Instituto J&amp;F"
            android:textColor="@color/colorOnSurfaceVariant"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_nome"
            app:layout_constraintTop_toBottomOf="@id/tv_nome" />

        <TextView
            android:id="@+id/tv_desde"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Estoquista desde 14/01/2024"
            android:textColor="@color/colorOnSurfaceVariant"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_nome"
            app:layout_constraintTop_toBottomOf="@id/tv_funcao" />

        <!-- Filtros de período -->
        <LinearLayout
            android:id="@+id/group_periodo_row1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_avatar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@drawable/ic_calendario_periodo" />

                <TextView
                    android:id="@+id/lbl_periodo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:padding="6dp"
                    android:text="Período:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/op7dias"
                android:layout_width="75dp"
                android:layout_height="33dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_tab_selected"
                android:gravity="center"
                android:text="7 dias"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/op90dias"
                android:layout_width="75dp"
                android:layout_height="33dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_tab_unselected"
                android:gravity="center"
                android:text="90 dias"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/op30dias"
                android:layout_width="75dp"
                android:layout_height="33dp"
                android:background="@drawable/bg_tab_unselected"
                android:gravity="center"
                android:text="30 dias"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:id="@+id/group_tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group_periodo_row1">

            <TextView
                android:id="@+id/tabAtividades"
                android:layout_width="112dp"
                android:layout_height="33dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_tab_selected"
                android:gravity="center"
                android:text="Atividades"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabAuditorias"
                android:layout_width="112dp"
                android:layout_height="33dp"
                android:background="@drawable/bg_tab_unselected"
                android:gravity="center"
                android:text="Auditorias"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Só o RecyclerView tem scroll -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHistoricoPerfil"
            android:layout_width="0dp"
            android:layout_height="420dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group_tabs"
            tools:listitem="@layout/item_historicos_perfil" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
